<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yuvish" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DarkThemeBackground">
        <item name="android:background">#F4F6FE</item>
    </style>

    <style name="cardParentStyle">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="cardStyle">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="editTextDark">
        <item name="android:background">@color/white</item>
    </style>

    <style name="editTheme">
        <item name="android:background">#E9ECEF</item>
    </style>

    <style name="svgTheme">
        <item name="tint">@color/black</item>
    </style>

</resources>
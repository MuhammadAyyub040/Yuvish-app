<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yuvish" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DarkThemeBackground">
        <item name="android:background">#F4F6FE</item>
    </style>

    <style name="cardParentStyle">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="cardStyle">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="iconStyleWithTintBackgroundColor">
        <item name="tint">@color/black</item>
        <item name="android:backgroundTint">@color/background_color_light_theme</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="editTextDark">
        <item name="android:background">@color/white</item>
    </style>

    <style name="editTheme">
        <item name="android:background">#E9ECEF</item>
    </style>

    <style name="svgTheme">
        <item name="tint">@color/black</item>
    </style>

    <style name="customBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="bottomDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/customBottomSheetStyle</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>